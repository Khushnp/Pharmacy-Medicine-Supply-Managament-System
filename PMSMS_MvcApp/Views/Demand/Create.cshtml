@model PharmacyMediSupplyRepository.Models.Demand

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Demand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DemandId" class="control-label"></label>
                <input asp-for="DemandId" class="form-control" />
                <span asp-validation-for="DemandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicineId" class="control-label"></label>
                <input asp-for="MedicineId" class="form-control" />
                <span asp-validation-for="MedicineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DemandCount" class="control-label"></label>
                <input asp-for="DemandCount" class="form-control" />
                <span asp-validation-for="DemandCount" class="text-danger"></span>
                <p class="text-danger" > Note : If demand Count is greater than Number of Tablets in the stock then Number of Tablets in the stock will be taken as a default.</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
